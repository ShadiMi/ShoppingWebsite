@{
    ViewData["Title"] = "Home Page";
}

<header class="py-5 bg-light border-bottom mb-4">
    <div class="container">
        <div class="text-center my-5">
            <h1 class="fw-bolder">Welcome to Our Shopping Website!</h1>
            <p class="lead mb-0">Discover amazing products and deals you won't find anywhere else.</p>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <!-- Featured Products -->
        <div class="col-lg-8">
            <h2 class="fw-bolder mb-4">Featured Products</h2>
            <!-- Placeholder for featured products; you'll replace this with dynamic content -->
            <p>Check out our <a href="/Products">featured products</a>!</p>
        </div>

        <!-- Special Offers or News -->
        <div class="col-lg-4">
            <h2 class="fw-bolder mb-4">Special Offers</h2>
            <!-- Placeholder for special offers; this could also be dynamic -->
            <p>Don't miss our latest <a href="#">special offers</a>!</p>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="py-5 bg-light mt-5">
        <div class="text-center">
            <h2 class="fw-bolder">Join Our Community!</h2>
            <p class="lead">Sign up for our newsletter to get the latest news and specials.</p>
            <a class="btn btn-primary btn-lg" href="#">Sign Up!</a>
        </div>
    </div>
</div>

<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2024</p>
    </div>
</footer>
